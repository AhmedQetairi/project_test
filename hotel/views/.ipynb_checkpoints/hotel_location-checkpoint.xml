<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--============ Hotel Service Type ============ -->
    <!-- Form view of hotel service type -->
    <record id="view_hotel_location_form" model="ir.ui.view">
        <field name="name">hotel.location.form</field>
        <field name="model">hotel.location</field>
        <field name="arch" type="xml">
            <form string="Billboard Location">
                <sheet>
                    <group>
                        <field name="name" string="Street" />
                        <field name="service_id" string="City"/>
                        <field name="child_ids" invisible="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree view of hotel service type -->
    <record id="view_hotel_location_tree" model="ir.ui.view">
        <field name="name">hotel.location.tree</field>
        <field name="model">hotel.location</field>
        <field name="arch" type="xml">
            <tree string="Billboard Location">
                <field name="name" />
            </tree>
        </field>
    </record>
</odoo>